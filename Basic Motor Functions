}

void moveForward() {
xmotion.Forward(20,200);
}

void turnLeft() {
xmotion.Left0(20,3000); 
}

void turnRight() {
xmotion.Right0(20,3000);
}

void pivotLeft() {
xmotion.ArcTurn(20,60,250);
}

void stopMotors() {
xmotion.StopMotors(100);
}
